{
    "openapi": "3.0.0",
    "info": {
        "title": "EchoAPI - REST API",
        "description": "Minimal backend toolbox for APIs",
        "version": "2.0.0"
    },
    "paths": {
        "/": {
            "get": {
                "tags": [
                    "System"
                ],
                "summary": "Health check",
                "operationId": "d8cdedf534d2d3561536c7ab5159c490",
                "responses": {
                    "200": {
                        "description": "API status check",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": {
                                    "pong": true,
                                    "database": "ok",
                                    "filesystem": "ok",
                                    "telegram": "configured",
                                    "version": "2.0.0"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/oauth/{provider}/redirect": {
            "get": {
                "tags": [
                    "OAuth"
                ],
                "summary": "Redirect to OAuth provider",
                "description": "Generates the authorization URL with PKCE and redirects the user to the OAuth2 provider.",
                "operationId": "69607a19b5da6876eae71853cdc36442",
                "parameters": [
                    {
                        "name": "provider",
                        "in": "path",
                        "description": "Provider name (e.g., azure)",
                        "required": true
                    }
                ],
                "responses": {
                    "302": {
                        "description": "Redirect to the provider"
                    }
                }
            }
        },
        "/oauth/{provider}/callback": {
            "get": {
                "tags": [
                    "OAuth"
                ],
                "summary": "OAuth callback handler",
                "description": "Handles the OAuth2 callback, exchanges the authorization code for an access token, verifies if the user exists, and returns your JWT.",
                "operationId": "bf674e1d9cca3f1170888e344b5ce9b8",
                "parameters": [
                    {
                        "name": "provider",
                        "in": "path",
                        "description": "Provider name (e.g., azure)",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OAuth callback successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "string",
                                            "example": "login_successful"
                                        },
                                        "token": {
                                            "type": "string",
                                            "example": "eyJ0eXAiOiJKV1QiLCJhbGci..."
                                        },
                                        "user": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "name": {
                                                    "type": "string",
                                                    "example": "John Doe"
                                                },
                                                "avatar": {
                                                    "type": "string",
                                                    "example": "https://cdn.example.com/avatar.jpg"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "example": "john.doe@example.com"
                                                },
                                                "status": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "last_login": {
                                                    "type": "string",
                                                    "example": "2024-01-01 12:00:00"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid request or state"
                    },
                    "404": {
                        "description": "User not found"
                    },
                    "500": {
                        "description": "Error exchanging token"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "System",
            "description": "System endpoints"
        },
        {
            "name": "OAuth",
            "description": "Endpoints for OAuth2 authorization"
        }
    ]
}