                "summary": "Health check",
                "operationId": "d8cdedf534d2d3561536c7ab5159c490",
                "responses": {
                    "200": {
                        "description": "Status da API",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": {
                                    "pong": true,
                                    "database": "ok",
                                    "filesystem": "ok",
                                    "telegram": "configured",
                                    "version": "2.0.0"
                                }
                            }
                        }
                    }
                }
            }
